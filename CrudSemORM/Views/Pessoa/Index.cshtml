@model System.Data.DataTable

@{
    ViewData["Title"] = "Lista das Pessoas";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Data de Nascimento
            </th>
            <th>
                RG
            </th>
            <th>
                CPF
            </th>
            <th>
                Nome da Mae
            </th>
            <th>
                Profissao
            </th>
            <th>
                <p>
                    <a asp-action="AddOrEdit">Create New</a>
                </p>

            </th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <td>
                    @Model.Rows[i]["Nome"]
                </td>
                <td>
                    @Model.Rows[i]["DataNascimento"]
                </td>
                <td>
                    @Model.Rows[i]["Rg"]
                </td>
                <td>
                    @Model.Rows[i]["Cpf"]
                </td>
                <td>
                    @Model.Rows[i]["NomeMae"]
                </td>
                <td>
                    @Model.Rows[i]["Profissao"]
                </td>
                <td>
                    <a asp-action="AddOrEdit" asp-route-id="@Model.Rows[i]["PessoaID"]">Edit</a> |
                    @*<a asp-action="Details" asp-route-id="@Model.Rows[i]["PessoaID"]">Details</a> |*@
                    <a asp-action="Delete" asp-route-id="@Model.Rows[i]["PessoaID"]">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
